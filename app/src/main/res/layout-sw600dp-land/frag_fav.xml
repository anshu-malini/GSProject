<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_8sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp">

        <TextView
            android:id="@+id/tvInfo"
            style="@style/textHomeTopInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/textHomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInfo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/ivCalendar"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_favourites_title" />

        <ImageView
            android:id="@+id/ivCalendar"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            app:tint="@color/teal_700"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_cal" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/home_bg">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvApod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_10sdp"
            tools:listitem="@layout/item_home_frag" />

        <include layout="@layout/layout_no_data" />

        <include layout="@layout/layout_no_internet" />

    </FrameLayout>

</LinearLayout>